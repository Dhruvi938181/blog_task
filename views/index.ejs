<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Blog CRUD</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    input, textarea { display: block; margin-bottom: 10px; width: 300px; padding: 8px; }
    .blog-card { border: 1px solid #ccc; padding: 10px; margin-top: 15px; }
    button { padding: 8px 15px; margin-right: 10px; }
  </style>
</head>

<body>
  <h1>Blog CRUD Page</h1>

  <h2>Add Blog</h2>
  <form action="/blog" method="POST">
    <input type="text" name="title" placeholder="Enter Title" required>
    <textarea name="content" placeholder="Enter Content" required></textarea>
    <button type="submit">Add Blog</button>
  </form>

  <hr>

  <h2>All Blogs</h2>

  <% blog.forEach(b => { %>
    <div class="blog-card">
      <h3><%= b.title %></h3>
      <p><%= b.content %></p>

      <!-- DELETE -->
      <form action="/blog/delete/<%= b._id %>" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>

      <!-- EDIT -->
      <form action="/blog/edit/<%= b._id %>" method="POST" style="display:inline;">
        <input type="text" name="title" value="<%= b.title %>" required>
        <input type="text" name="content" value="<%= b.content %>" required>
        <button type="submit">Update</button>
      </form>
    </div>
  <% }) %>

</body>
</html>
