<h1>Categories</h1>

<form action="/category" method="post">
    <input type="text" name="title" placeholder="Enter title" required>
    <input type="submit" value="Add Category">
</form>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(cat => { %>
            <tr>
                <td><%= cat.title %></td>
                <td>
                    <a href="/category/edit/<%= cat._id %>">Edit</a>
                    <a href="/category/delete/<%= cat._id %>">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
