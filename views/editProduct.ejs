<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Edit Product</h1>
<form action="/product/update/<%= product._id %>" method="post" enctype="multipart/form-data">
    <input type="text" name="title" value="<%= product.title %>" placeholder="Title" required />
    <input type="number" name="price" value="<%= product.price %>" placeholder="Price" required />
    
    <select name="categoryId" required>
        <% category.forEach(cat => { %>
            <option value="<%= cat._id %>" <%= cat._id.equals(product.categoryId) ? 'selected' : '' %> >
                <%= cat.name %>
            </option>
        <% }) %>
    </select>

    <input type="file" name="image" />
    <img src="/<%= product.image %>" width="100" alt="Current Image" />
    
    <button type="submit">Update Product</button>
</form>

</body>
</html>